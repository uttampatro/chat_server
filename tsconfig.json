{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "rootDir": "./src",
        "strict": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": [
        "src/entity/**/*.ts" /* Include every ts file in source folder */
    ],
    "exclude": ["node_modules"]
}
